{% extends 'user/partials/base.html.twig' %}
{% block title %}Notre boutique{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="text-white">Tous nos produits !</h1>
            </div>
        </div>
        <div class="row">
            {% for product in products %}
            <article class="col-6 mb-3">
            <div class="product-card">
                <a href="#"class="link-img-product">
                    <img src="{{ asset('assets/images/products/book.jpg') }}" alt="image du produit">
                </a>
                <div class="description text-center">
                    <h2 class="text-white">{{ product.name }}</h2>
                    <p class="text-white">Prix: <span>{{ product.price }}</span></p>
                    <p class="text-white">{{ product.description }}</p>
                </div>
                <div class="buttons mb-3">
{#                    <a href="#" id="cartADD" class="btn btn-green" onclick="addCart('{{ product.name }}')">Ajouter au panier</a>#}
                    <a href="#" id="{{ product.id }}" class="btn btn-green data-id" onclick="return false">Ajouter au panier</a>
                    <a href="#" class="btn btn-blue">En savoir plus</a>
                </div>
            </div>
            </article>
            {% endfor %}
        </div>
    </div>
    {{ include('user/partials/_cart-modal.html.twig') }}

{% endblock %}
