<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Panier</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="modal-com" class="modal-body">
                {% if modalProducts is not null %}
                    {% for product in modalProducts %}
                    <div class="row mb-1">
                        <div class="col-12 display-product-modal">
                            <div class="block-product-img">
                                <img src="{{ asset('assets/images/products/book.jpg') }}" alt="">
                            </div>
                            <div class="block-product-txt">
                                <h6>{{ product.product.name }}</h6>
                                <span>{{ product.product.price }} €</span> x <span>{{ product.quantity }}</span>
                            </div>
                        </div>
                    </div>
                        <hr>
                    {% endfor %}
                    {{ total }}
                {% else %}
                    <p>Aucns produits sélectionnés</p>
                {% endif %}
            </div>
            <div class="modal-footer">
                <a href="{{ path('cart') }}" type="button" class="btn btn-primary">Payer</a>
            </div>
        </div>
    </div>
</div>
