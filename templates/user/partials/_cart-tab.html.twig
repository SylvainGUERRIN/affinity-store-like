{% if app.request.attributes.get("_route") == 'cart_remove' %}
    {% if items | length > 0 %}
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>nom du produit</th>
                    <th>prix</th>
                    <th>quantité</th>
                    <th>total</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <th>{{ item.product.id }}</th>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <button id="{{ item.product.id }}" class="btn btn-danger btn-sm data-minus" onclick="return false">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button id="{{ item.product.id }}" class="btn btn-success btn-sm data-plus" onclick="return false">
                                <i class="fas fa-plus"></i>
                            </button>
                            <button id="{{ item.product.id }}" class="btn btn-danger btn-sm data-remove" onclick="return false">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="4">Total:</td>
                    <td>{{ total }}</td>
                    <td></td>
                </tr>
                </tfoot>
            </table>
        </div>
    {% else %}
        <div class="col-12">
            <p>Votre panier est vide</p>
        </div>
    {% endif %}
